{
  "name": "startpage",
  "version": "1.0.0",
  "description": "Startpage for EPFL.ch",
  "main": "index.js",
  "scripts": {
    "eslint": "eslint src --ext=js",
    "eslint:fix": "eslint src --ext=js --fix",
    "lint": "pnpm prettier && pnpm eslint",
    "lint:fix": "pnpm prettier:fix && pnpm eslint:fix",
    "prettier": "prettier --check --ignore-unknown '**' '!**/*.js' '!pnpm-lock.yaml'",
    "prettier:fix": "prettier --write --ignore-unknown '**' '!**/*.js' '!pnpm-lock.yaml'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "nodemon ./src/server.js"
  },
  "author": "ISAS-FSD",
  "license": "MIT",
  "dependencies": {
    "ejs": "^3.1.9",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "eslint": "^8.52.0",
    "eslint-config-standard": "^17.1.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3"
  },
  "eslintConfig": {
    "extends": "standard",
    "globals": {
      "$": true
    },
    "rules": {
      "max-len": [
        2,
        80
      ],
      "semi": [
        2,
        "always"
      ]
    }
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "src"
    ],
    "ext": "js,json,ts,ejs,css"
  },
  "prettier": {
    "singleQuote": true,
    "overrides": [
      {
        "files": "src/**/*.ejs",
        "options": {
          "parser": "angular"
        }
      }
    ]
  }
}
