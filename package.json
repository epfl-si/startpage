{
  "name": "startpage",
  "version": "1.0.0",
  "description": "Startpage for EPFL.ch",
  "main": "index.js",
  "scripts": {
    "prettier": "prettier --check --ignore-unknown '**' '!**/*.js'",
    "prettier:fix": "prettier --write --ignore-unknown '**' '!**/*.js'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "nodemon ./src/server.js"
  },
  "author": "ISAS-FSD",
  "license": "MIT",
  "dependencies": {
    "ejs": "^3.1.9",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3"
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": ["src"],
    "ext": "js,json,ts,ejs,css"
  },
  "prettier": {
    "singleQuote": true,
    "overrides": [
      {
        "files": "src/**/*.ejs",
        "options": {
          "parser": "angular"
        }
      }
    ]
  }
}
